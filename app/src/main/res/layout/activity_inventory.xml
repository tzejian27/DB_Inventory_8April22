<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:textColor="@color/blue"
        android:id="@+id/txt_new_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textSize="80px"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:textColor="@color/blue"
        android:id="@+id/txt_input_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_barcode"
        android:textSize="50px"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:background="@drawable/blue_border"
        android:paddingLeft="20dp"
        android:id="@+id/editText_barcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/enter_scan_barcode"
        android:inputType="number"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:id="@+id/btn_inventory_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:text="@string/back"
            android:width="300dp"/>

        <Button
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:id="@+id/btn_inventory_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_weight="1"
            android:text="@string/next"
            android:width="300dp"/>

    </LinearLayout>

</LinearLayout>