<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/txt_new_house_SO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="@string/stock_out"
        android:textColor="@color/blue"
        android:textSize="80px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Inventory_TotalQty_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/house_qty"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_Inventory_TotalQty_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/total_quantity"
            android:textColor="@color/blue" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_input_barcode4_SO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/barcode"
        android:textColor="@color/blue"
        android:textSize="50px" />

    <EditText
        android:id="@+id/editText_Inventory_barcode_SO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_border"
        android:ems="10"
        android:hint="@string/enter_scan_barcode"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:text="Selected Batch: " />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="103dp"
                android:text="Batch Quantity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:id="@+id/txt_batch_field"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:text="text"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txt_batch_qty_field"
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:text="text"
                android:textColor="#000000"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inventory_quantity_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="Total Qty"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_Inventory_Qty_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/inventory_s_quantity"
            android:textColor="@color/blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quantity_in_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="@string/qty_out"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_quantity_in_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="Qty out"
            android:textColor="@color/blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Inventory_name_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="Description"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_Inventory_name_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/inventory_s_name"
            android:textColor="@color/blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Inventory_price_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="@string/price"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_Inventory_price_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/inventory_s_price"
            android:textColor="@color/blue" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_Inventory_cost_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:text="@string/cost"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/textView_Inventory_cost_SO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="@string/inventory_s_cost"
            android:textColor="@color/blue" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_step5_quantity_SO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Qty Out"
        android:textColor="@color/blue"
        android:textSize="50px" />

    <EditText
        android:id="@+id/editText_Inventory_step5_Qty_SO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/blue_border"
        android:ems="10"
        android:hint="Add qty out"
        android:inputType="number"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/btn_back_SO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:width="100dp"
            android:backgroundTint="@color/blue"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_Inventory_enter_SO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:width="100dp"
            android:backgroundTint="@color/blue"
            android:text="Done"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_Inventory_esc_SO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:width="100dp"
            android:backgroundTint="@color/grey"
            android:enabled="false"
            android:text="@string/new_btn"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>
</ScrollView>