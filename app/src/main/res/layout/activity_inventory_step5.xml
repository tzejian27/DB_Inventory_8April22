<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory_step5"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:textColor="@color/blue"
        android:id="@+id/txt_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modify"
        android:textSize="80px"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:textColor="@color/blue"
            android:id="@+id/tv_Inventory_TotalQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_quantity"
            android:layout_weight="1"/>

        <TextView
            android:textColor="@color/blue"
            android:id="@+id/textView_Inventory_step5_totalQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_quantity"
            android:layout_weight="6"/>


    </LinearLayout>

    <TextView
        android:textColor="@color/blue"
        android:id="@+id/txt_step5_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity"
        android:textSize="50px"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:background="@drawable/blue_border"
        android:paddingLeft="20dp"
        android:id="@+id/editText_Inventory_step5_Qty"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="@string/enter_to_change_quantity"
        android:inputType="number"
        android:layout_marginBottom="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <Button
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:id="@+id/btn_Inventory_step5_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/cancel"/>

        <Button
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:id="@+id/btn_Inventory_step5_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/add"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <Button
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:id="@+id/btn_Inventory_step5_change"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/change"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>