<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/batchColumnField"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_BatchNum"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Batch Num"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="Available: " />

                <TextView
                    android:id="@+id/txt_quantityValue"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingStart="5dp"
                    android:text="Qty"
                    android:textColor="#2196F3" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView_plus"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_plus_svgrepo_com" />

        <EditText
            android:id="@+id/editText_quantity"
            android:layout_width="94dp"
            android:layout_height="37dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/corners_background"
            android:ems="10"
            android:hint="Qty"
            android:inputType="number"
            android:numeric="integer"
            android:paddingLeft="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView_minus"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_minus" />

    </LinearLayout>

</androidx.cardview.widget.CardView>