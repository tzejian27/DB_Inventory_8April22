<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".House_List_Stock_Out"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_house_back_SO"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_back"/>

        <TextView

            android:id="@+id/txt_house_list"
            android:layout_width="40dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="House List (Stock Out)"
            android:textSize="50px"/>

        <ImageView
            android:id="@+id/imageView_house_search_SO"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_search" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_House_SO"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>