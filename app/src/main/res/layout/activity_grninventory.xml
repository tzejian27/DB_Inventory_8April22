<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".GRNInventory">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Input Barcode :"
        android:textColor="@color/blue"
        android:textSize="50px" />

    <EditText
        android:id="@+id/edt_grn_in_Barcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/blue_border"
        android:ems="10"
        android:hint="Enter/Scan Barcode"
        android:inputType="textPersonName"
        android:paddingLeft="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_grn_in_back"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/grn"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_grn_in_next"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/grn"
            android:text="Next"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>